<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appex.android.inquisitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.appex.android.inquisitor.MainActivity"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name="com.appex.android.inquisitor.AboutActivity"
            android:parentActivityName="com.appex.android.inquisitor.QuestionActivity"
            android:theme="@style/Dialogtheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".QuestionActivity" />
        </activity>
        <activity
            android:name="com.appex.android.inquisitor.QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="com.appex.android.inquisitor.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appex.android.inquisitor.EndActivity"
            android:label="@string/title_activity_end" >
        </activity>
        <activity
            android:name="com.appex.android.inquisitor.GoogleActivity"
            android:label="@string/title_activity_google" >
        </activity>
        <activity
            android:name="com.appex.android.inquisitor.QuesDispActivity"
            android:label="@string/title_activity_ques_disp" >
        </activity>

        <provider
            android:name="com.appex.android.inquisitor.QuestionsProvider"
            android:authorities="com.appex.android.inquisitor.QuestionsProvider" >
        </provider>
    </application>

</manifest>